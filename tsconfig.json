{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "Node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./build",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "pretty": true,
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/config.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}